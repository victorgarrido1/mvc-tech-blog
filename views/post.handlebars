  <body>
    <div class="post">
      <article class="card">
        <div class="card-header flex-row justify-space-between">
          <h2>{{post.title}}</h2>
          <div>
            Posted by
            {{post.user.username}}
            on
            {{format_date createdAt}} 
          </div>
        </div>
        <div class="card-body">
          {{post.body}}
        </div>
      </article>
      {{#if post.comments}}
        <section class="card">
          <div class="card-header">
            <h3>Comments</h3>
          </div>
          <div class="card-body">
            {{#each post.comments as |comment|}}
              <p>
                {{comment.comment_description}}
                Posted by
                {{comment.user.username}}
                on
                {{format_date createdAt}}
              </p>
            {{/each}}
          </div>
        </section>
      {{/if}}
      <form id="new-comment-form" class="card">
        <div class="card-header">
          <h3>Add New Comment</h3>
        </div>
        <div class="card-body">
          <input type="hidden" name="post-id" value="{{post.id}}" />
          <label class="form-label" for="comment-body">Comment</label>
          <textarea
            id="content-tech-comment"
            name="comment-body"
            class="form-input"
          ></textarea>
          <button type="submit" class="btn">Submit</button>
        </div>
      </form>
    </div>
    <script scr="/js/newPost.js"></script>
  </body>